<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_layout"
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/spreadsheet_item_name"
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:text="Comer"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="@+id/spreadsheet_item_image_view"
            app:layout_constraintRight_toRightOf="@+id/spreadsheet_item_image_view"
            app:layout_constraintTop_toBottomOf="@+id/spreadsheet_item_image_view" />

        <ImageView
            android:id="@+id/spreadsheet_item_image_view"
            android:layout_width="130dp"
            android:layout_height="128dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_image_black_48dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>