<%= render 'layouts/nav_menu_and_view' do %>
  <div class="item">
    <%= render 'shared/error', errors: @item.errors %>
    <div class="button-bar">
      <%= link_to user_items_path(current_user), class: 'button-box' do %>
        <%= fa_icon 'times' %>Cancel
      <% end %>
    </div>
    <div class="form-box">
      <div class="label">New Item</div>
      <%= render 'form', item: @item %>
    </div>
  </div>
<% end %>