<%= render 'layouts/nav_menu_and_view' do %>
  <div class="page">
    <%= render 'shared/error', model: @page %>
    <div class="button-bar">
      <%= link_to user_spreadsheet_page_path(@user, @spreadsheet, @page),
        class: 'button-box cancel' do %>
        <%= fa_icon 'times' %><%= t 'views.cancel' %>
      <% end %>
    </div>
    <div class="form-box">
      <div class="label"><%= t 'views.edit' %></div>
      <%= render 'form', page: @page %>
    </div>
  </div>
<% end %>
