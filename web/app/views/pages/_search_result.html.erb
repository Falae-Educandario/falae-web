<% if items.empty? %>
  <p>
    No item was found.
  </p>
<% else %>
  <% items.each do |item| %>
    <div class="item-result">
      <div class="item-result-img <%= css_class_name(item.category) %>">
        <img src="<%= item.img_src %>"/>
      </div>

      <p>
        <strong>Name:</strong>
        <%= item.name %>
      </p>

      <p>
        <strong>Speech:</strong>
        <%= item.speech %>
      </p>
      <p>
        <strong>Category:</strong>
        <%= display_name item.category %>
      </p>

      <%# TODO: refactoring %>
      <% if item.in_page? @page %>
        <span class="already">Already in this page</span>
      <% else @page %>
        <%= button_to({action: 'add_to_page'}, remote: true, params: {item_id: item.id}, class: 'button-box') do %>
          <%= fa_icon 'plus-circle' %>Add to page
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
