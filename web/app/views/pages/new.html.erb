<%= render 'layouts/nav_menu_and_view' do %>
  <div class="page">
    <%= render 'shared/error', errors: @page.errors %>
    <div class="button-bar">
      <%= link_to user_spreadsheet_path(@user, @spreadsheet), class: 'button-box' do %>
        <%= fa_icon 'times' %>Cancel
      <% end %>
    </div>
    <div class="form-box">
      <div class="label">New page</div>
      <%= render 'form', page: @page %>
    </div>
  </div>
<% end %>
