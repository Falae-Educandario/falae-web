<%= render 'layouts/nav_menu_and_view' do %>
  <div class="spreadsheet">
    <%= render 'shared/error', errors: @spreadsheet.errors %>
    <div class="button-bar">
      <%= link_to user_spreadsheet_path(@spreadsheet), class: 'button-box cancel' do %>
        <%= fa_icon 'times' %><%= t 'views.cancel' %>
      <% end %>
    </div>
    <div class="form-box">
      <div class="label"><%= t 'views.edit' %></div>
      <%= render 'form', spreadsheet: @spreadsheet %>
    </div>
  </div>
<% end %>
