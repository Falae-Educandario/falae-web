<div class="login">
  <% if alert %>
  <div class="errors" >
    <%= alert %>
  </div>
  <% end %>
  <div class="form-box">
    <div class="label"><%= t :welcome %>!</div>
    <%= form_with scope: :user, local: true do |form| %>
      <div class="field">
        <%= form.label :email %>
        <span class="input-icon"><%= fa_icon 'user' %></span>
        <%= form.text_field :email, class: 'offset-for-icon', placeholder: :email %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <span class="input-icon"><%= fa_icon 'lock' %></span>
        <%= form.password_field :password, class: 'offset-for-icon', placeholder: :password %>
      </div>

      <div class="actions">
        <%= form.submit t :log_in %>
      </div>
    <% end %>
  </div>
</div>
