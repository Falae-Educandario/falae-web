<div class="login">
  <div class="login-error <%='visible' if alert%>" >
  <%= alert ? alert : '&nbsp;'%>
  </div>
  <div class="form-box">
    <div class="label">Welcome!</div>
    <%= form_with scope: :user do |form| %>
      <div class="field">
        <%= form.label :email %>
        <span class="input-icon"><%= fa_icon 'user' %></span>
        <%= form.text_field :email, class: 'offset-for-icon', placeholder: :email %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <span class="input-icon"><%= fa_icon 'lock' %></span>
        <%= form.password_field :password, class: 'offset-for-icon', placeholder: :password %>
      </div>

      <div class="actions">
        <%= form.submit 'Log in' %>
      </div>
    <% end %>
  </div>
</div>
